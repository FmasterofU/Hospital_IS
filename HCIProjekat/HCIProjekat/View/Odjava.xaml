<Window x:Class="HCIProjekat.View.Odjava"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HCIProjekat.View"
        mc:Ignorable="d"
        Title="Odjava" Height="300" Width="500">
    <Grid Height="300" Width="500">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="100"></ColumnDefinition>
                <ColumnDefinition Width="*"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Image Source="/View/Slike/upozorenje.png" Margin="30 0 20 100"></Image>
            <TextBlock Text="Da li ste sigurni da želite da se odjavite?" Grid.Column="1" Height="140" HorizontalAlignment="Center" FontSize="20"></TextBlock>
        </Grid>
        <Button Content="Odjavi me" Click="OdjaviMe_Click" Margin="80 150 0 0" FontSize="20" HorizontalAlignment="Left" Width="100" Height="40"></Button>
        <Button Content="Otkaži" Click="Otkazi_Click" Margin="0 150 80 0" FontSize="20" HorizontalAlignment="Right" Width="90" Height="40"></Button>
    </Grid>
</Window>
