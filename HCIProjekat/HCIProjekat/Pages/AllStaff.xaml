                    </StackPanel>
                    <Grid x:Name="btns_opcije" Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="3">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition/>                 
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>

                        <Button x:Name ="btn_radniKalendar" Content="Radni kalendar" Grid.Column="1" Margin="20 0 20 0" Click="BtnRadniKalendar_Click"/>
                        <!--<Button Content="Ugovor o radu" Grid.Column="0" Margin="20 0 20 0"/>-->
                        <Button  x:Name ="btn_prikazTermina" Content="Prikaz termina" Grid.Column="2" Margin="20 0 20 0" Click="BtnPrikaziTermine_Click"/>
                    </Grid>
                </Grid>
            </GroupBox>
        </StackPanel>

    </StackPanel>
</Page>
