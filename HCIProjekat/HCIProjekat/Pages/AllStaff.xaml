                                <Border Height="180" Width="180"  CornerRadius="200" Margin="20">
                                    <Border.Background>
                                        <ImageBrush Stretch="Fill" ImageSource="../Images/doctorImage.jpg"/>
                                    </Border.Background>
                                </Border>
