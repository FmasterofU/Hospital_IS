                <ComboBox x:Name="sunmsCombo" Margin="0,0,0,0" Width="65" Height="50" Style="{StaticResource comboboxStyle}" SelectionChanged="SelectionChanged"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
