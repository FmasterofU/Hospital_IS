                <ComboBox x:Name="monhfCombo" Width="65" Height="50" Margin="10,0,0,0" Style="{StaticResource comboboxStyle}" SelectionChanged="SelectionChanged"/>
                <Label HorizontalAlignment="Left" Margin="0,0,0,0" VerticalAlignment="Top" Width="Auto" Height="60" Style="{StaticResource labelStyle}">:</Label>
                <ComboBox x:Name="monmfCombo" Margin="0,0,0,0" Width="65" Height="50" Style="{StaticResource comboboxStyle}" SelectionChanged="SelectionChanged"/>
                <Label HorizontalAlignment="Left" Margin="10,0,0,0" VerticalAlignment="Top" Width="Auto" Height="60" Style="{StaticResource labelStyle}">-</Label>
                <ComboBox x:Name="monhsCombo" Margin="10,0,0,0" Width="65" Height="50" Style="{StaticResource comboboxStyle}" SelectionChanged="SelectionChanged"/>
                <Label HorizontalAlignment="Left" Margin="0,0,0,0" VerticalAlignment="Top" Width="Auto" Height="60" Style="{StaticResource labelStyle}">:</Label>
                <ComboBox x:Name="monmsCombo" Margin="0,0,0,0" Width="65" Height="50" Style="{StaticResource comboboxStyle}" SelectionChanged="SelectionChanged"/>
                <Button x:Name="oneForAllButton" Margin="30,0,0,0" Height="50" Width="Auto" Background="Orange" IsEnabled="False" Style="{StaticResource buttonStyle}" 
                        Click="oneForAllButton_Click">Svaki dan isto</Button>
            </StackPanel>
            <StackPanel Margin="0,5,0,0" Orientation="Horizontal">
