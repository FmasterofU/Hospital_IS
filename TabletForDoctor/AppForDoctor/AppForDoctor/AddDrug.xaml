<Window x:Class="AppForDoctor.AddDrug"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AppForDoctor"
        mc:Ignorable="d"
        Title="AddDrug" Height="500" Width="500"
        x:Name="AddDrugWindow"
        Background="White"
        Closed="AddDrugWindow_Closed"
        Loaded="AddDrugWindow_Loaded">
    <Grid>
        <Button x:Name="addDrugButton" HorizontalAlignment="Left" Margin="330,400,0,0" VerticalAlignment="Top" Width="150" FontSize="35"
                Background="Green" Foreground="White" Height="55" BorderBrush="Black" Click="addDrugButton_Click">Dodaj</Button>
        <Button x:Name="backFromAddButton" HorizontalAlignment="Left" Margin="170,400,0,0" VerticalAlignment="Top" Width="150" FontSize="35"
                Background="Red" Foreground="White" Height="55" BorderBrush="Black" Click="AddDrugWindow_Closed">Nazad</Button>
        <ComboBox x:Name="addDrugsComboBox" HorizontalAlignment="Center" VerticalAlignment="Center" Width="240" FontSize="35" Height="55" Margin="121,80,121,315" Foreground="Black"/>
    </Grid>
</Window>
