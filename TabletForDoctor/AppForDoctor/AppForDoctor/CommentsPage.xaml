<Page x:Class="AppForDoctor.CommentsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:AppForDoctor"
      mc:Ignorable="d" 
      d:DesignHeight="768" d:DesignWidth="1024"
      Title="CommentsPage">
    <Grid>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,643,25,25">
            <Button x:Name="blogFromCommentsButton" HorizontalAlignment="Right" Margin="0,0,160,0" VerticalAlignment="Bottom" Width="150" Style="{StaticResource buttonStyle}"
                    Background="Red" Height="55" Click="blogFromCommentsButton_Click">Nazad</Button>
        </StackPanel>
        <ListBox x:Name="commentsListBox" HorizontalAlignment="Left" Margin="25,152,0,0" VerticalAlignment="Top" Style="{StaticResource listBoxStyle}" Height="470" Width="959"></ListBox>
    </Grid>
</Page>
