<Page x:Class="AppForDoctor.MainMenuPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:AppForDoctor"
      mc:Ignorable="d" 
      d:DesignHeight="768" d:DesignWidth="1024"
      Title="MainMenuPage">

    <Grid>
        <Label x:Name="patientID" HorizontalAlignment="Left" Margin="25,152,0,0" VerticalAlignment="Top" FontSize="35" Foreground="Black">Identifikacioni broj pacijenta:</Label>
        <TextBox x:Name="patientIDText" HorizontalAlignment="Left" Margin="505,160,0,0" Height="49" TextWrapping="Wrap" VerticalAlignment="Top" Width="300" FontSize="35" 
                 BorderBrush="Black" Foreground="Black" Background="White"></TextBox>
        <Button x:Name="acceptID" HorizontalAlignment="Right" Margin="0,160,25,0" VerticalAlignment="Top" Width="150" FontSize="35" Height="49" Foreground="White" 
                    Background="Green" Click="acceptID_Click">Potvrdi</Button>
    </Grid>
</Page>
